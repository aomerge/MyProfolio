---
import Footer from '../components/footer.astro';
import Header from '../components/header.astro';
interface Props {
  title: string;
  page: string;
}

const { title, page } = Astro.props;
import Nav from '../components/button/navResposive.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="alternate icon" href="/favicon.ico" />
	<link rel="stylesheet" href="/global.css" />
	<link rel="stylesheet" href="./css/index.css">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="static w-full justify-center items-center flex flex-col">
    <Header
      page={page}
      Class={' bg-[#010409] ml-0 mr-0 z-20 pt-9 flex justify-center border-b-[1px] border-gray-500  w-full '}
      title="OEMERGE"
      body="Software Developer"
      href="asde"
    />
    <slot />
    <Footer />
    <Nav />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #0d1117;
    background-size: 224px;
  }
</style>
