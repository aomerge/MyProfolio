---
interface Props {
  title: string;
  body: string;
  href: string;
}
const { title, body, href } = Astro.props;
---

<div class="text-gray-300 mb-2">
  <div class="col-12 flex gap-3 items-end">
    <a href="/MyProfolio/" class="hover:text-gray-200">
      <h1 class="font-bold text-lx">{title}</h1>
    </a>
    <p class="text-lx">/ MyProfolio /</p>
  </div>
  <p class="text-lx">{body}</p>
</div>
