---
interface Props{
    email: string;
}
const {email} = Astro.props;
const orange = "rgb(251 146 60 / var(--tw-text-opacity))";
---

<section class=" max-sm:flex-col my-20 flex justify-between items-center">
    <div class="w-3/5 flex max-sm:w-full max-sm:flex-col items-center justify-start"> 
        <h3 class={"text-3xl font-bold  max-sm:mr-0 text-gray-400 mr-4 "}>I am thrilled to answer to your next project </h3>
        <svg class=" max-sm:rotate-90 max-sm:my-6" xmlns="http://www.w3.org/2000/svg" width="64" height="41" viewBox="0 0 24 21" fill="none">
            <path d="M-5.24032e-07 9.01154L-3.92898e-07 12.0115L18.3146 12.0115L11.3126 18.9462L13.4097 21L24 10.5115L13.4097 1.32119e-06L11.3126 2.1L18.3146 9.01154L-5.24032e-07 9.01154Z" fill={orange}/>
        </svg>        
    </div>
    <p class="text-3xl font-bold text-orange-300">{email}</p>
</section>