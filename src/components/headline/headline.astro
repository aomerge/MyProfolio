---
import LeftArrow from '../icons/leftArrow.astro';
import RigthArrow from '../icons/rigthArrow.astro';
import Tetris from '../Game/tetris.astro';
import Dino from '../Game/dino.astro';

interface Props {
  title: string;
  body: string;
}
const { title, body } = Astro.props;
const color = 'text-orange-500';
---

<script type="module">
  const $buttonLefth = document.getElementById('ArrowLeft');
  const $buttonRigth = document.getElementById('ArrowRight');

  $buttonLefth.addEventListener('click', () => {
    const slider = document.getElementById('ContentSlider');
    slider.scrollLeft -= 1000;
  });

  $buttonRigth.addEventListener('click', () => {
    const slider = document.getElementById('ContentSlider');
    slider.scrollLeft += 1000;
  });
</script>

<section
  class="border-2 border-gray-500 h-[400px] mb-16 mt-16 rounded-lg grid grid-cols-12"
>
  <button
    id="ArrowLeft"
    class="bg-orange-500 rounded-l-md border-r-2 border-gray-500 flex items-center justify-center"
  >
    <LeftArrow /></button
  >
  <div
    class="overflow-hidden col-start-2 col-end-12 justify-center items-center"
  >
    <section
      id="ContentSlider"
      style="grid-template-columns: repeat(2, 100%);"
      class="scrollbar-hide scroll overflow-x-scroll grid"
    >
    <Dino />
    <Tetris />
    </section>
  </div>
  <button
    id="ArrowRight"
    class="border-l-2 rounded-r-md bg-orange-500 border-gray-500 flex items-center justify-center"
  >
    <RigthArrow />
  </button>
</section>
