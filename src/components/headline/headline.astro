---
interface Props {
	title: string;
	body: string;
}
const {title, body} = Astro.props;
const color ="text-orange-500";
---

<section class=" mt-48 mb-44 flex max-sm:mt-10 max-sm:mb-10 max-sm:flex-col max-sm:w-full justify-between">
        <div class="w-1/2 max-sm:w-full">
            <h1 class={" font-extrabold w-5/6 text-5xl " + color} >{title}</h1>
        </div>
        <div class=" mt-12 w-1/2 max-sm:mt-5 max-sm:text-gray-400  max-sm:mb-20 max-sm:w-full flex justify-end">
            <p class=" text-xl w-11/12">{body}</p>
        </div>
</section>
